.problems-page
  height calc(100vh - 50px)
  
  .sources-menu
    position fixed
    bottom 0px
    left 0
    right 0
    background rgba(0,0,0,0.85)
    color white
    width 100%
    height 280px
    z-index 1
    transition all 0.5s
    padding 16px 12px
    
    .toggle-tab
      position absolute
      background rgba(0,0,0,0.5)
      color white
      top -36px
      height 36px
      padding 6px 8px
      text-align center
      display flex
      justify-content center
      align-items center
      left 50%
      font-size 16px
      vertical-align middle
      transform translate(-50%, 0)
      border-top-left-radius 6px
      border-top-right-radius 6px
      cursor pointer
    
    .content-container
      height 100%
      overflow auto
      max-width 480px
      margin auto

  .problem-section
    position relative
    display flex
    justify-content center
    align-items center
    height calc(100vh - 50px)
  
  .problem-bg
    background-size cover
    background-repeat no-repeat
    background-position center center
    position absolute
    top 0
    left 0
    right 0
    bottom 0
  
  .section-overlay
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,0.45)
  
  .section-content
    color white
    z-index 1
    text-align center
    padding 0 12px
    
    .section-title
      font-size 42px
      font-weight 500
      
      @media(max-width 360px)
        font-size 36px
    
    .section-subtitle
      font-size 24px
      font-weight 100
      
    .section-desc
      font-size 12px
      font-weight 100
  
    .big-number
      font-size 28px
      font-weight 500