@require 'variables'

.footer
  width 100%
  background-color primary-dark
  color white
  display flex
  flex-direction row
  justify-content center
  text-align center
  padding 50px 25px
  font-weight 100
  position relative
  
  a
    color white
    text-decoration underline

    &:hover
      color white - 50%
  
  .contact-us
    font-size 36px
  
  .contact-email
    font-size 16px
  
  .footer-links
    margin 25px auto 25px auto
    width 180px
    display flex
    justify-content space-around
  
  .copyright-text
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 0)
    background rgba(128, 128, 128, 0.3)
    padding 6px 8px
    border-top-right-radius 6px
    border-top-left-radius 6px
    
  