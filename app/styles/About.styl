@require "variables"

member-pic-size = 150px

.about
  
  .about-header
    padding 100px 25px
    width 100%
    
    .title
      font-size 48px
      font-weight 300
    
    .subtitle
      font-size 24px
      font-weight 100
      margin-bottom 25px
      
    .description
      font-size 16px
      font-weight 100
    
  .about-header-container
    display flex
    justify-content space-between
    align-items center
    max-width 1140px
    margin auto
    
    .text-content
      width 35%
      margin-bottom 25px
      
    .img-content
      width 60%
    
    @media(max-width 768px)
      flex-direction column
      
      .text-content, .img-content
        width 90%
  
  .team-section
    background primary
    color white
    position relative
    padding 100px 25px 0
    
    .title-container
      margin auto
      padding 50px 12px 100px
      text-align center
      
      h1
        font-size 48px
        font-weight 300
      
      h2
        font-size 24px
        font-weight 100
    
    &:after
      position absolute
      top 0
      left 50%
      width 0
      height 0
      transform translate(-50%, 0)
      content ''
      border-style solid
      border-width 75px 75px 0 75px
      border-color white transparent transparent transparent
    
    .members-container
      max-width 1140px
      margin auto
      display flex
      flex-direction row
      justify-content space-around
      align-items flex-start
      
      @media(max-width 920px)
        flex-direction column
        align-items center

    .member-item
      width 280px
      display flex
      flex-direction column
      justify-content center
      margin-bottom 100px
      
      .member-face
        margin auto
        height member-pic-size + 10px
        width member-pic-size + 10px
        border-radius 50%
        background white - 10%
        margin auto
        display flex
        justify-content center
        align-items center
        
        img
          border-radius 50%
          height member-pic-size
          width member-pic-size
      
      .member-name
        text-align center
        padding 18px 12px
        font-size 18px
        font-weight 300
      
      .member-role
        text-align center
        padding 6px
        font-size 14px
        font-weight 100
      
      hr
        width 60%
        border 1px solid accent-one
      
      .member-description
        font-size 16px
        font-weight 100
        
    
  .contact-section
    background primary
    color white
    padding 0 25px 100px
    font-weight 300
    text-align center
    
    .contact-container
      width 200px
      margin auto
      
      @media(max-width 768px)
        width 140px
    
    .contact-title
      font-size 32px
      
    .contact-subtitle
      font-size 16px
    
    .contact-email
      font-size 18px
      
      > a
        color white
    
    .contact-address-label
      text-align left
      font-size 20px
      margin-top 24px
      
    .contact-address
      text-align left
      font-size 18px
    
    @media(max-width 768px)
    
      .contact-title
        font-size 24px
        
      .contact-subtitle
        font-size 10px
      
      .contact-email
        font-size 12px
        
        > a
          color white
      
      .contact-address-label
        text-align left
        font-size 14px
        margin-top 12px
        
      .contact-address
        text-align left
        font-size 12px